<div class="container">

  <div class="card">
    <h2 class="card-title">Votre classement</h2>
    <p class="card-subtitle">
      IlvPoints : <strong>5</strong> â€¢ Position : <strong>#1</strong>
    </p>
  </div>

  <div class="card">
    <h2 class="card-title">Top 3 des utilisateurs</h2>

    <div class="table-container">
      <table class="ranking-table">
        <thead>
          <tr>
            <th>Pos.</th>
            <th>Utilisateur</th>
            <th>IlvPoints</th>
          </tr>
        </thead>

        <tbody>
          <%
          compteur = 0
          for (let user of leaderboard) {
            compteur++; %>
            <tr>
              <td>#<%= compteur %></td>
              <td style="text-align: center;">
                <img src="/image/user/<%= user.username %>" class="profile-photo"><br>
                  <%= user.username %>
                </td>
              <td><%= user.points %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</div>