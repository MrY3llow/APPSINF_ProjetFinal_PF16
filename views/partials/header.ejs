<header class="site-header">
  <div class="container header-row">

    <!-- Logo -->
    <a class="brand" href="/">
      <img src="/LOGO.png" alt="Logo" class="brand-logo">
      <span class="brand-title">Louvain-la-Vente</span>
    </a>

    <!-- Recherche -->
    <div class="search-container">
      <form class="search-form" role="search" aria-label="Rechercher des incidents" method="GET" action="/">
        <input type="search" class="search-input" placeholder="Rechercher des incidents..." aria-label="Rechercher des incidents" name="search">
    </form>
    </div>

    <!-- Partie alignée à droite du header (Acceuil, login, signup, création d'accident, page de profil) -->
    <div class="header-right">
      <nav class="site-nav" aria-label="Navigation principale">
        <a href="/" class="nav-link">Accueil</a>
        <!-- Affiche les boutons de connexion uniquement si l'utilisateur n'est pas connecté. -->
        <% if(username == undefined) { %>
          <a href="/login" class="nav-link">Connexion</a>
          <a href="/signup" class="nav-link">Inscription</a>
        <% } %>
        <a href="/annonce-creation" class="nav-link btn btn-outline">Créer une vente</a>
        <% if(username != undefined) { %>
          <span class="user-balance"><%= userBalance.toFixed(2) %> $</span>
          <a href="/profile" class="profile-link">
            <img src="/image/user/<%= username %>" alt="Photo de profil" class="header-profile-photo">
          </a>
        <% } %>
      </nav>

    </div>
  </div>
</header>